
@model  Church.DataLayer.Db.Entity.Staff

@{
    ViewBag.Title = "List";
}
<head>
    <style>
        #tbllist tr {
            cursor: pointer;
        }

       /* #tbllist th {
            background-color: #fff;
        }*/

        .highlight {
            background-color: orange;
        }
    </style>
</head>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h2><span class="mastername">Staff</span><span class="listname">List</span></h2>
        </div>
        <div class="col-sm">
            
        </div>
        <div class="col-sm">
            @Html.ActionLink(" ", "Staff", null, new { @class = "fa fa-plus fa-2x float-md-right" })
        </div>
    </div>
</div>

<table class="table" id="tbllist" name="tbllist">
    <thead>
        <tr>
            <th>
                @Html.HiddenFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address2)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in (IEnumerable<Church.DataLayer.Db.Entity.Staff>)ViewBag.StaffList)
    {
        <tr id="@item.Id">
            <td>
                @Html.HiddenFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name, new { data_value = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address2)
            </td>
            <td>
                @Html.ActionLink(" ", "EditStaff", new { id = item.Id }, new { @class= "btn btn-outline-primary btn-sm fa fa-pencil" }) |
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class= "btn btn-outline-success fa fa-eye" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class= "btn btn-outline-danger btn-sm fa fa-trash-o" })
            </td>
        </tr>
    }
</table>


@section Scripts {
    <script>
        $(function () {
            $('#tbllist').on('click', 'tbody tr', function (event) {
                $(this).addClass('highlight').siblings().removeClass('highlight');
                //var selectedRow = "#".concat($(this).closest('tr').attr('id'));
                //$(selectedRow).css("background-color", "orange");
            });
        });
        
    </script>
}