@model IEnumerable<Church.DataLayer.Models.DepartmentEmployees>

@{
    ViewBag.Title = "EmployeesByDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees By Department</h2>

<table class="table" id="tbllist" name="tbllist">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
            $("#tbllist").DataTable();
        })
    </script>
}